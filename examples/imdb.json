{
  "base_url": "http://akas.imdb.com",
  "scrapers": [
    {
      "id": "movie_combined_details",
      "url": "/title/tt{imdb_id}/combined",
      "format": "html",
      "prune": ".//div[@id='tn15']",
      "rules": [
        {
          "key": "long title",
          "path": ".//div[@id='tn15crumbs']/b/text()",
          "reducer": "first"
        },
        {
          "key": "poster",
          "path": ".//img[@id='primary-poster']/@src",
          "reducer": "first"
        },
        {
          "key": "rating",
          "path": ".//div[@class='starbar-meta']/b/text()",
          "reducer": "first"
        },
        {
          "key": "votes",
          "path": ".//div[@class='starbar-meta']/a/text()",
          "reducer": "first"
        },
        {
          "key": "rank",
          "path": ".//div[@class='starbar-special']/a/text()",
          "reducer": "first"
        },
        {
          "foreach": ".//div[@class='info']",
          "key": {
            "path": "./h5/text()",
            "reducer": "normalize"
          },
          "path": "./div[@class='info-content']//text()",
          "reducer": "clean"
        }
      ]
    }
  ]
}