      "value": {
        "path": "//div[@class='fn']/text()",
        "reducer": "first"
      }
    },
    {
      "key": "born",
      "value": {
        "path": "//span[@class='bday']/text()",
        "reducer": "first"
      }
    },
    {
      "key": "birthplace",
      "value": {
        "path": "//div[@class='birthplace']//text()",
        "reducer": "clean"
      }
    },
    {
      "key": "occupation",
      "value": {
        "foreach": "//td[@class='role']//li",
        "path": "./text()",
        "reducer": "clean"
      }
    }
  ]
}
