{
  "items": [
    {
      "key": "title",
      "value": {
        "path": ".//title/text()",
        "reducer": "first"}
    },
    {
      "key": "year",
      "value": {
        "path": ".//span[@class='year']/text()",
        "reducer": "first"
      }
    },
    {
      "key": "genres",
      "value": {
        "foreach": ".//ul[@class='genres']/li",
        "path": "./text()",
        "reducer": "first"
      }
    },
    {
      "key": "director",
      "value": {
        "items": [
          {
            "key": "name",
            "value": {
              "path": ".//div[@class='director']//a/text()",
              "reducer": "first"
            }
          },
          {
            "key": "link",
            "value": {
              "path": ".//div[@class='director']//a/@href",
              "reducer": "first"
            }
          }
        ]
      }
    },
    {
      "key": "cast",
      "value": {
        "foreach": ".//table[@class='cast']/tr",
        "items": [
          {
            "key": "name",
            "value": {
              "path": "./td[1]/a/text()",
              "reducer": "first"
            }
          },
          {
            "key": "link",
            "value": {
              "path": "./td[1]/a/@href",
              "reducer": "first"
            }
          },
          {
            "key": "character",
            "value": {
              "path": "./td[2]/text()",
              "reducer": "first"
            }
          }
        ]
      }
    },
    {
      "key": "review",
      "value": {
        "path": ".//div[@class='review']//text()",
        "reducer": "clean"
      }
    },
    {
      "foreach": ".//div[@class='info']",
      "key": {
        "path": "./h3/text()",
        "reducer": "normalize"
      },
      "value": {
        "path": "./div//text()",
        "reducer": "first"
      }
    }
  ]
}
