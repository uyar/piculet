{
  "items": [
    {
      "key": "title",
      "value": {
        "path": "//title/text()"
      }
    },
    {
      "key": "year",
      "value": {
        "path": "//span[@class='year']/text()",
        "transform": "int"
      }
    },
    {
      "key": "genres",
      "value": {
        "foreach": "//ul[@class='genres']/li",
        "path": "./text()"
      }
    },
    {
      "key": "director",
      "value": {
        "section": "//div[@class='director']//a",
        "items": [
          {
            "key": "name",
            "value": {
              "path": "./text()"
            }
          },
          {
            "key": "link",
            "value": {
              "path": "./@href"
            }
          }
        ]
      }
    },
    {
      "key": "cast",
      "value": {
        "foreach": "//table[@class='cast']/tr",
        "items": [
          {
            "key": "name",
            "value": {
              "path": "./td[1]/a/text()"
            }
          },
          {
            "key": "link",
            "value": {
              "path": "./td[1]/a/@href"
            }
          },
          {
            "key": "character",
            "value": {
              "path": "./td[2]/text()"
            }
          }
        ]
      }
    },
    {
      "key": "review",
      "value": {
        "path": "//div[@class='review']//text()",
        "transform": "clean"
      }
    },
    {
      "foreach": "//div[@class='info']",
      "key": {
        "path": "./h3/text()",
        "transform": "normalize"
      },
      "value": {
        "path": "./p/text()"
      }
    }
  ]
}
